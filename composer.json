{
    "name": "sangkil/application",
    "description": "Simple ERP",
    "keywords": ["yii2", "ERP"],
    "homepage": "http://www.sangkilsoft.com/",
    "type": "project",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Misbahul Munir",
            "email": "misbahuldmunir@gmail.com",
            "role": "Core project development"
        }
    ],
    "support": {
        "issues": "https://github.com/sangkil/application/issues",
        "source": "https://github.com/sangkil/application"
    },
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": "~2.0",
        "mdmsoft/yii2-admin": "~2.0",
        "mdmsoft/yii2-widgets": "~1.0",
        "sangkil/biz3-api": "~3.0",
        "yiisoft/yii2-bootstrap": "~2.0",
        "bower-asset/admin-lte": "1.3"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "~2.0",
        "mdmsoft/yii2-gii": "~1.0",
        "yiisoft/yii2-codeception": "~2.0",
        "yiisoft/yii2-faker": "~2.0"
    },
    "suggest": {
        "codeception/codeception": "Codeception, 1.8.*@dev is currently works well with Yii.",
        "codeception/specify": "BDD style code blocks for PHPUnit and Codeception",
        "codeception/verify": "BDD Assertions for PHPUnit and Codeception"
    },
    "config": {
        "process-timeout": 1800
    },
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        },
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    }
}
